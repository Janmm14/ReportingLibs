<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.statscraft.reporters</groupId>
    <artifactId>reporter-bukkit</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Reporter-Bukkit</name>
    <description>StatsCraft bukkit metrics reporter</description>
    <url>http://statscraft.org</url>
    <inceptionYear>2016</inceptionYear>

    <organization>
        <name>StatsCraft-MC</name>
        <url>https://github.com/StatsCraft-MC/</url>
    </organization>
    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:https://github.com/StatsCraft-MC/ReportingLibs.git</connection>
        <developerConnection>scm:git:git@github.com:StatsCraft-MC/ReportingLibs.git</developerConnection>
        <url>https://github.com/StatsCraft-MC/ReportingLibs</url>
    </scm>
    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/StatsCraft-MC/ReportingLibs/issues</url>
    </issueManagement>
    <!-- Coming soon...
    <ciManagement>
        <system>jenkins</system>
        <url>http://ci.statscraft.org/job/ReportingLibs/</url>
    </ciManagement>
    -->

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.7</java.version>
    </properties>

    <build>
        <defaultGoal>clean package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>spigotmc-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/groups/public/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>1.10.2-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
